extends layout 
 
block content
    .details.content
            label By:  
                a(href=`/authors/${details.author}`)
                    h3 #{details.author}
            br
            .content
                label Title:
                    h2  #{details.title}
                br
                label Genre: 
                    h2 #{details.genre}
                br
                label Description:
                    p  #{details.description}
                br
                label Publish Date:
                    p  #{details.publishDate}
                br
                label Price
                    p.price $#{details.price}
                img.delete(src="", alt="image should be here", srcset="")
            button(type='submit') purchase